{% extends 'base.html.twig' %}

{% block title %}Programas{% endblock %}

{% block body %}
    <section class="bg-white py-10">
        <div class="container">
            {% for programa in programas %}
                <div class="col-md-12" style="margin-bottom: 45px; display: flex;">
                    <div style="margin-right: 30px">
                        <img src="/{{ course_image }}/{{ programa.imagen }}" alt="" style="width: 300px;">
                    </div>
                    <div>
                        <h1>{{ programa.title }}</h1>
                        {{ programa.description | raw }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    <style>
        .page-header {
            padding-top: 0px;
            padding-bottom: 0px;
        }
    </style>
{% endblock %}
